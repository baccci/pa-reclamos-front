    "/auth/register-cliente": {
      "post": {
        "description": "Crea un cliente en el sistema usando los datos enviados en el cuerpo de la solicitud. Devuelve un JWT (access_token) si el registro es exitoso. El email debe ser único en el sistema.",
        "operationId": "AuthController_registrarCliente",
        "parameters": [],
        "requestBody": {
          "required": true,
          "description": "Datos requeridos para registrar un cliente",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              },
              "examples": {
                "ejemploCorrecto": {
                  "summary": "Cliente válido",
                  "value": {
                    "nombre": "Juan Perez",
                    "email": "juan@example.com",
                    "telefono": "3516789900",
                    "contraseña": "MiClaveSegura123"
                  }
                },
                "emailDuplicado": {
                  "summary": "Intento de registro con email ya existente",
                  "value": {
                    "nombre": "Carlos López",
                    "email": "registrado@example.com",
                    "telefono": "3511112233",
                    "contraseña": "Clave12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente registrado correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "access_token": "jwt_generado_aqui..."
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error de validación o email ya en uso.",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "statusCode": 400,
                    "message": "El email ya está en uso",
                    "error": "Bad Request"
                  }
                }
              }
            }
          }
        },
        "summary": "Registrar un nuevo cliente",
        "tags": [
          "Auth"
        ]
      }
    },
